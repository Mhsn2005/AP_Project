<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@style.css"
            fx:controller="org.example.SignupController"
            prefHeight="600.0" prefWidth="400.0"
            styleClass="root-pane">

    <center>
        <VBox spacing="20.0" alignment="CENTER" prefWidth="350.0">
            <Label text="Create Your Account" styleClass="header-label"/>
            <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="input-field"/>
            <Button fx:id="signupButton" text="Sign up" styleClass="primary-button signup-button"/>
            <HBox spacing="5.0" alignment="CENTER">
                <Label text="Already have an account?" styleClass="secondary-label"/>
                <Hyperlink fx:id="loginLink" text="Login"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
